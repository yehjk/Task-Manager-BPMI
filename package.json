{
  "name": "task-manager",
  "private": true,
  "scripts": {
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "dev:client": "npm --prefix client start",
    "dev:server": "npm --prefix server run dev",
    "dev": "concurrently \"npm --prefix server run dev\" \"npm --prefix client start\""
  },
  "devDependencies": {
    "concurrently": "^9.0.1",
    "prettier": "^3.3.3"
  }
}
